{
    "name": "brs-emu-app",
    "productName": "BrightScript Emulator",
    "description": "Desktop Application",
    "version": "0.10.31",
    "private": true,
    "author": {
        "name": "Marcelo Lv Cabral",
        "email": "marcelo@lvcabral.com",
        "url": "https://lvcabral.com/"
    },
    "copyright": "Â© 2019-2023, Marcelo Lv Cabral",
    "homepage": "https://lvcabral.com/brs/",
    "repository": {
        "type": "git",
        "url": "https://github.com/lvcabral/brs-emu-app"
    },
    "main": "app/main.js",
    "build": {
        "appId": "com.lvcabral.brs-emu.app",
        "productName": "BrightScript Emulator",
        "artifactName": "brsEmuApp-${version}-${platform}-${arch}.${ext}",
        "files": [
            "app/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "resources",
            "output": "dist/${version}"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "artifactName": "brsEmuApp-${version}-windows.${ext}"
        },
        "mac": {
            "artifactName": "brsEmuApp-${version}-macOS.${ext}",
            "category": "public.app-category.developer-tools"
        },
        "linux": {
            "target": [
                {
                    "target": "appimage",
                    "arch": [
                        "x64",
                        "armv7l"
                    ]
                },
                {
                    "target": "deb",
                    "arch": "x64"
                }
            ]
        }
    },
    "scripts": {
        "postinstall": "patch-package && electron-builder install-app-deps",
        "preunit": "webpack --config build/webpack.unit.config.js --env test --display=none",
        "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register",
        "pree2e": "webpack --config build/webpack.app.config.js --env test --display=none && webpack --config build/webpack.e2e.config.js --env test --display none",
        "e2e": "mocha temp/e2e.js --require source-map-support/register",
        "test": "npm run unit && npm run e2e",
        "start": "node build/start.js",
        "build": "webpack --config build/webpack.app.config.js",
        "dist": "webpack --config build/webpack.app.config.js --env production && electron-builder",
        "dist-win": "webpack --config build/webpack.app.config.js --env production && electron-builder -w --x64 --ia32",
        "dist-linux32": "webpack --config build/webpack.app.config.js --env production && electron-builder -l --ia32",
        "dist-linux64": "webpack --config build/webpack.app.config.js --env production && electron-builder -l --x64",
        "dist-deb64": "webpack --config build/webpack.app.config.js --env production && electron-builder --linux deb --x64",
        "dist-linuxarm": "webpack --config build/webpack.app.config.js --env production && electron-builder --linux appimage --armv7l",
        "release": "npm test && webpack --config build/webpack.app.config.js --env production && electron-builder"
    },
    "dependencies": {
        "@electron/remote": "^2.0.9",
        "brs-emu": "^0.10.22",
        "busboy": "^0.3.1",
        "custom-electron-titlebar": "^4.2.7",
        "electron-about-window": "^1.14.0",
        "electron-preferences": "2.8.1",
        "fs-jetpack": "^4.1.0",
        "luxon": "^2.0.1",
        "minimist": "^1.2.5",
        "mousetrap": "^1.6.5",
        "node-ssdp": "^4.0.1",
        "restana": "^3.4.2",
        "ws": "^7.5.0",
        "xmlbuilder": "^13.0.2"
    },
    "devDependencies": {
        "@babel/core": "^7.14.3",
        "@babel/preset-env": "^7.14.4",
        "@types/luxon": "^1.27.1",
        "babel-loader": "^8.0.6",
        "chai": "^4.1.0",
        "css-loader": "^6.7.3",
        "electron": "^20.0.0",
        "electron-builder": "^23.6.0",
        "electron-mocha": "^8.2.2",
        "friendly-errors-webpack-plugin": "^1.7.0",
        "mocha": "^6.2.3",
        "patch-package": "^6.4.7",
        "postinstall-postinstall": "^2.1.0",
        "source-map-support": "^0.5.6",
        "spectron": "^6.0.0",
        "style-loader": "^3.3.1",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "webpack-merge": "^4.1.3",
        "webpack-node-externals": "^3.0.0"
    }
}
